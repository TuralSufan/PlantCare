<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivPostItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPostItemUserID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="User ID"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            Tools:text="User ID"
            app:layout_constraintBottom_toBottomOf="@id/ivPostItem"
            app:layout_constraintStart_toEndOf="@id/ivPostItem"
            app:layout_constraintTop_toTopOf="@id/ivPostItem" />

        <TextView
            android:id="@+id/tvPostItemPostID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Post ID"
            android:text="sdadad"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvPostItemPostTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/dm_sans"
            android:maxLines="1"
            android:text="sunt aut facere repellat provident occaecati excepturi optio reprehenderit"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPostItem" />

        <TextView
            android:id="@+id/tvPostItemBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:maxLines="5"
            Tools:text="asdasdasdnas asjdhas aksjksdjaksdjakdjkajsdkjakaksdjkajdkajdakdjkajdkajkdjadjajdajdkajdkajdkajkdjakjdda dasjkd aakjsd as djkas jk das dka d "
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPostItemPostTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>